@model DashboardModel

@using Microsoft.AspNetCore.Identity

@{
	ViewData["Title"] = "Dashboard";
	Layout = "_SideBar";
}

	<div class="main-container">
		<div class="topbar">
			<div class="prev-next-buttons">
				<button type="button" class="fa fas fa-chevron-left"></button>
				<button type="button" class="fa fas fa-chevron-right"></button>
			</div>

			<div class="navbar">
				<form id="logoutForm"  asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
					<button id="logout" type="submit">Log Out</button>
				</form>
			</div>
		</div>

		<div class="spotify-playlists">
			<h2>New Songs</h2>

			<div class="list">
				<div class="item">
					<img src="https://i.scdn.co/image/ab67616d0000b2733b5e11ca1b063583df9492db" />
					<div class="play">
						<span class="fa fa-play"></span>
					</div>
					<h4>Today's Top Hits</h4>
					<p>Rema & Selena Gomez are on top of the...</p>
				</div>
				@foreach(var song in Model.NewSongs)
				{
					<div class="item">
						<img src="@song.CoverStorageFile?.FilePath" />
						<div class="play">
							<span class="fa fa-play"></span>
						</div>
						<h4>@song.Name</h4>
						@foreach(var artist in song.Artists)
						{
							<p>@artist.FirstName @artist.LastName</p>
						}
					</div>
				}
		</div>
			
		</div>

		<div class="spotify-playlists">
			<h2>Top Songs</h2>
			<div class="list">
				<div class="item">
					<img src="https://i.scdn.co/image/ab67616d0000b2733b5e11ca1b063583df9492db" />
					<div class="play">
						<span class="fa fa-play"></span>
					</div>
					<h4>Peaceful Piano</h4>
					<p>Relax and indulge with beautiful piano pieces</p>
				</div>

				@foreach (var song in Model.TopSongs)
				{
					<div class="item">
						<img src="@song.CoverStorageFile?.FilePath" />
						<div class="play">
							<span class="fa fa-play"></span>
						</div>
						<h4>@song.Name</h4>
					@foreach (var artist in song.Artists)
					{
						<p>@artist.FirstName @artist.LastName</p>
					}
					</div>
				}
			</div>
		</div>

		<div class="spotify-playlists">
			<h2>Trends</h2>
			<div class="list">
				<div class="item">
					<img src="https://i.scdn.co/image/ab67616d0000b2733b5e11ca1b063583df9492db" />
					<div class="play">
						<span class="fa fa-play"></span>
					</div>
					<h4>Mood Booster</h4>
					<p>Get happy with today's dose of feel-good...</p>
				</div>
			@foreach (var song in Model.Trends)
			{
				<div class="item">
					<img src="@song.CoverStorageFile?.FilePath" />
					<div class="play">
						<span class="fa fa-play"></span>
					</div>
					<h4>@song.Name</h4>
				@foreach (var artist in song.Artists)
				{
					<p>@artist.FirstName @artist.LastName</p>
				}
				</div>
			}
			</div>
		</div>
	</div>
