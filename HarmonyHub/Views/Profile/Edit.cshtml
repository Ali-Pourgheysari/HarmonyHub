@model EditProfileModel

@{
    ViewData["Title"] = "Profile";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="~/css/sidebar.css" rel="stylesheet" />

<header>
    <partial name="~/Views/Shared/_SideBarPartial.cshtml"/>
</header>
<div class="profile-form-edit">
    <div class="form-container">
        <h1 style="align-self:center;">@ViewData["Title"]</h1>
        <form method="post">
            <input asp-for="Id" class="form-control-obj" hidden />
            <div class="form-group">
                <label asp-for="FirstName">First name</label>
                <input asp-for="FirstName" class="form-control-obj" />
                <div class="underline"></div>
            </div>
            <div class="form-group">
                <label asp-for="LastName">Last name</label>
                <input asp-for="LastName" class="form-control-obj" />
                <div class="underline"></div>

            </div>
            <div class="form-group">
                <label asp-for="PhoneNumber">Phone number</label>
                <input asp-for="PhoneNumber" class="form-control-obj" />
                <div class="underline"></div>

            </div>
            <button type="submit" class="form-btn">Create</button>
        </form>
        <div>
            <p>
                <a asp-area="Identity"  asp-page="/Account/ResetPassword">Reset your password</a>
            </p>
        </div>
    </div>
</div>
