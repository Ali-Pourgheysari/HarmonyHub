@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Forgot your password?";
}

<div class="pass-container">
    <div class="logo-form">
        <img src="~/static/Logo-highres.png" />
    </div>
    <div class="row pass-form">
        <div class="col-md-4 form-container">
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="validation" role="alert"></div>
                <h1 style="align-self:center;">@ViewData["Title"]</h1>
                <div class="form-floating mb-3">
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                    <label asp-for="Input.Email" class="form-label"></label>
                    <span asp-validation-for="Input.Email" class="validation"></span>
                </div>
                <button type="submit" class="w-100 form-btn">Reset Password</button>
            </form>
        </div>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
