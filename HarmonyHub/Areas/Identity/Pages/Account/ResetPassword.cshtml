@page
@model ResetPasswordModel
@{
    ViewData["Title"] = "Reset password";
}

<div class="pass-container">
    <div class="logo-form">
        <img src="~/static/Logo-highres.png" />
    </div>
    <div class="row  pass-form">
        <div class="col-md-4 form-container">
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="validation" role="alert"></div>
                <h1 style="align-self:center;">@ViewData["Title"]</h1>
                <input asp-for="Input.Code" type="hidden" />
                <div class="form-group mb-3">
                    <label asp-for="Input.Email"></label>
                    <input asp-for="Input.Email" class="form-control-obj" autocomplete="username" aria-required="true" />
                    <div class="underline"></div>
                    <span asp-validation-for="Input.Email" class="validation"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="Input.Password"></label>
                    <input asp-for="Input.Password" class="form-control-obj" autocomplete="new-password" aria-required="true" />
                    <div class="underline"></div>
                    <span asp-validation-for="Input.Password" class="validation"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="Input.ConfirmPassword"></label>
                    <input asp-for="Input.ConfirmPassword" class="form-control-obj" autocomplete="new-password" aria-required="true" />
                    <div class="underline"></div>
                    <span asp-validation-for="Input.ConfirmPassword" class="validation"></span>
                </div>
                <button type="submit" class="w-100 form-btn">Reset</button>
            </form>
        </div>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
