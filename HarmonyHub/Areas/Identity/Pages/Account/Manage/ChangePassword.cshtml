@page
@model ChangePasswordModel
@{
    ViewData["Title"] = "Change password";
    ViewData["ActivePage"] = ManageNavPages.ChangePassword;
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<header>
    <link href="~/css/sidebar.css" rel="stylesheet" />
    <partial name="~/Views/Shared/_ProfileSideBarPartial.cshtml" />
</header>
@* <partial name="_StatusMessage" for="StatusMessage" /> *@
<div class="password-container">
    <div class="logo-form">
        <img src="~/static/Logo-highres.png" />
    </div>
    <div class="row password-form">
        <div class="col-md-6 form-container">
            <form id="change-password-form" method="post">
                <h1 style="align-self:center;">Change password</h1>
                <div asp-validation-summary="ModelOnly" class="validation" role="alert"></div>
                <div class="form-group mb-3">
                    <label asp-for="Input.OldPassword" class="form-label"></label>
                    <input asp-for="Input.OldPassword" class="form-control-obj" autocomplete="current-password" aria-required="true" />
                    <div class="underline"></div>
                    <span asp-validation-for="Input.OldPassword" class="validation"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="Input.NewPassword" class="form-label"></label>
                    <input asp-for="Input.NewPassword" class="form-control-obj" autocomplete="new-password" aria-required="true"/>
                    <div class="underline"></div>
                    <span asp-validation-for="Input.NewPassword" class="validation"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="Input.ConfirmPassword" class="form-label"></label>
                    <input asp-for="Input.ConfirmPassword" class="form-control-obj" autocomplete="new-password" aria-required="true" />
                    <div class="underline"></div>
                    <span asp-validation-for="Input.ConfirmPassword" class="validation"></span>
                </div>
                <button type="submit" class="w-100 form-btn">Update password</button>
            </form>
        </div>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
