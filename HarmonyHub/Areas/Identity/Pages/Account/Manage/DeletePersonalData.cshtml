@page
@model DeletePersonalDataModel
@{
    ViewData["Title"] = "Delete Personal Data";
    ViewData["ActivePage"] = ManageNavPages.PersonalData;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="data-container">
    <div class="logo-form">
        <img src="~/static/Logo-highres.png" />
    </div>
    <div class="row data-form">
        <div class="col-md-4 form-container">
            <form id="delete-user" method="post">
                <h1 style="align-self:center;">@ViewData["Title"]</h1>
                <div class="alert alert-warning-obj" role="alert">
                    <p>
                        <strong>Deleting this data will permanently remove<br />your account and this cannot be recovered.</strong>
                    </p>
                </div>
                <div asp-validation-summary="ModelOnly" class="validation" role="alert"></div>
                @if (Model.RequirePassword)
                {
                    <div class="form-group mb-3">
                        <label asp-for="Input.Password" class="form-label">Please enter your password</label>
                        <input asp-for="Input.Password" class="form-control-obj" autocomplete="current-password" aria-required="true" />
                        <div class="underline"></div>
                        <span asp-validation-for="Input.Password" class="validation"></span>
                    </div>
                }
                <button class="w-100 form-btn delete" type="submit">Delete data and close my account</button>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
