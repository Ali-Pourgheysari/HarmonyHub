@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="register-container">
    <div class="logo-form">
        <img src="~/static/Logo-highres.png" />
    </div>
    <div class="row register-form">
        <div class="col-md-4 form-container">
            <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                <h1 style="align-self:center;">Create a new account</h1>
                <div asp-validation-summary="ModelOnly" class="validation" role="alert"></div>
                <div class="form-group mb-3">
                    <label asp-for="Input.Email">Email</label>
                    <input asp-for="Input.Email" class="form-control-obj" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                    <div class="underline"></div>
                    <span asp-validation-for="Input.Email" class="validation"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="Input.FirstName">First Name</label>
                    <input asp-for="Input.FirstName" class="form-control-obj" autocomplete="firstname" aria-required="true" />
                    <div class="underline"></div>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="Input.LastName">Last Name</label>
                    <input asp-for="Input.LastName" class="form-control-obj" autocomplete="firstname" aria-required="true" />
                    <div class="underline"></div>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="Input.Password">Password</label>
                    <input asp-for="Input.Password" class="form-control-obj" autocomplete="new-password" aria-required="true" />
                    <div class="underline"></div>
                    <span asp-validation-for="Input.Password" class="validation"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="Input.ConfirmPassword">Confirm Password</label>
                    <input asp-for="Input.ConfirmPassword" class="form-control-obj" autocomplete="new-password" aria-required="true" />
                    <div class="underline"></div>
                    <span asp-validation-for="Input.ConfirmPassword" class="validation"></span>
                </div>
                <button id="registerSubmit" type="submit" class="form-btn">Register</button>
                <div class="redirect-link">
                    <p>
                        <a asp-area="Identity" asp-page="/Account/Login">Login</a>
                    </p>
                </div>
            </form>
            
        </div>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
