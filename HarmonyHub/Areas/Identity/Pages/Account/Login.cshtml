@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="login-container">
    <div class="logo-form">
        <img src="~/static/Logo-highres.png" />
    </div>
    <div class="row login-form">
        <div class="col-md-4 form-container">
            <form id="account" method="post">
                <h1 style="align-self:center;">Log in</h1>
                <div asp-validation-summary="ModelOnly" class="validation" role="alert"></div>
                <div class="form-group mb-3">
                    <label asp-for="Input.Email"></label>
                    <input asp-for="Input.Email" class="form-control-obj" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                    <div class="underline"></div>
                    <span asp-validation-for="Input.Email" class="validation"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="Input.Password" class="form-label">Password</label>
                    <input asp-for="Input.Password" class="form-control-obj" autocomplete="current-password" aria-required="true" />
                    <div class="underline"></div>
                    <span asp-validation-for="Input.Password" class="validation"></span>
                </div>
                <div class="checkbox mb-3">
                    <label asp-for="Input.RememberMe" class="form-label">
                        <input class="form-check-input" asp-for="Input.RememberMe" />
                        @Html.DisplayNameFor(m => m.Input.RememberMe)
                    </label>
                </div>
                <div>
                    <button id="login-submit" type="submit" class="w-100 form-btn">Log in</button>
                </div>
                <div class="redirect-link">
                    <p>
                        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">register as a new user</a>
                    </p>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
